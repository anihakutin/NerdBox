<%="#{flash[:message_edit]}"%>
<br>
<h2 class="font-weight-bold">You are viewing <%=@hardware.name%></h2>
<br>
<div class="card mt-2 pl-2" style="width: 100%;">
  <div class="card-body">
    <h4 class="card-title">Hardware Info</h4>
    <!-- Hardware that belongs to user directly-->
      <% if @hardware.hardwareable.is_a?(User) then %>
        <h6 class="card-subtitle mb-2 text-muted">Accessory of <a href="/users/<%=@hardware.hardwareable.slug%>"><%=@hardware.hardwareable.username%></a></h6>
        <% if @user.hardwares.include?(@hardware) %>
          <a href="/hardwares/<%=@hardware.id%>/edit" class="card-link">Edit hardware</a>
        <% end %>
    <!-- Hardware that belongs to a setup-->
      <% elsif @hardware.hardwareable.user.is_a?(User) then %>
        <h6 class="card-subtitle mb-2 text-muted">Part of <a href="/setups/<%=@hardware.hardwareable.id%>"><%=@hardware.hardwareable.name%></a></h6>
        <% if @user.setup.hardwares.include?(@hardware) %>
          <a href="/hardwares/<%=@hardware.id%>/edit" class="card-link">Edit hardware</a>
        <% end %>
      <% end %>
    <br>
    <img src="<%=@hardware.image1%>" alt="<%= @hardware.name %>" class="img-thumbnail m-1">
    <img src="<%=@hardware.image2%>" alt="<%= @hardware.name %>" class="img-thumbnail m-1">
    <img src="<%=@hardware.image3%>" alt="<%= @hardware.name %>" class="img-thumbnail m-1">
    <p class="card-text">Rank: <%= @hardware.rank %></p>
    <a href="<%=@hardware.link%>" class="card-link">Go to hardware</a>
  </div>
</div>
