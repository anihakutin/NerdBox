<div class="h-100 col-9 p-3 mt-2 bg-light text-dark">
  <form action="/resources/<%=@resource.id%>" method="post" enctype="multipart/form-data">
    <h2 class="font-weight-bold">Edit Name: <input type="text" name="resource[name]" value="<%=@resource.name%>"></h2>
    <br>
    <div class="card mt-2 pl-2" style="width: 100%;">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">by <a href="/users/<%=@resource.user.slug%>"><%=@resource.user.username%></a></h6>
        <br>
        <img src="<%=@resource.icon%>" alt="<%= @resource.name %>" class="img-thumbnail m-1">
        <input type="file" name="file" value="Select Image To Upload">
        <p class="card-text">Link: <input type="text" name="resource[link]" value="<%= @resource.link %>"></p>
        <p class="card-text">Rank: <input type="text" name="resource[rank]" value="<%= @resource.rank %>"></p>
      </div>
    </div>
    <br>
    <input type="hidden" name="_method" value="patch">
    <button type="submit" name="submit" class="btn btn-primary">Save Changes</button>
  </form>
