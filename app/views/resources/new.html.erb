<form action="/resources" method="post" enctype="multipart/form-data">
  <h2 class="font-weight-bold">Name: <input type="text" name="resource[name]" required></h2>
  <br>
  <div class="card mt-2 pl-2" style="width: 100%;">
    <div class="card-body">
      <br>
      <img src="/images/blankImage.png" alt="Select Icon To Upload" class="img-thumbnail m-1">
      <input type="file" name="file" value="Select Image To Upload" required>
      <p class="card-text">Link: <input type="text" name="resource[link]" required></p>
      <p class="card-text">Rank: <input type="text" name="resource[rank]" required></p>
    </div>
  </div>
  <br>
  <button type="submit" name="submit" class="btn btn-primary">Save Changes</button>
</form>
